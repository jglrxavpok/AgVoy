{% extends 'base.html.twig' %}
{% form_theme create_com 'bootstrap_4_layout.html.twig' %}


{% block customCSS %}
<link rel="stylesheet" href="{{ asset('css/owner.css') }}"
{% endblock %}
{% block title %}Laisser un commentaire{% endblock %}

{% block body %}
<div class="container form-container">
    <h1 class="display-4">Ajouter un commentaire</h1>

    <div class="form">
        {{ form_start(create_com) }}
        {{ form_widget(create_com) }}


        <button class="btn btn-primary">Enregistrer</button>
        {{ form_end(create_com) }}
    </div>
</div>
{% endblock %}
